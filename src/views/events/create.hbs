<head>
    {{>head}}
</head>
{{>header}}
<div class="container mt-3">
  <h1>Create Event</h1>
  <form method="POST" action="/events">
    <div class="form-group">
      <label for="trackNumber">Event</label>
      <select class="form-control" id="trackNumber" name="trackNumber" required>
        {{#each parcels}}
        <option value="{{this.Tracknumber}}">{{this.Tracknumber}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="courierId">Courier</label>
      <select class="form-control" id="courierId" name="courierId" required>
        {{#each couriers}}
        <option value="{{this.idCuriers}}">{{this.name}} </option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
        <label for="eventname">Event</label>
        <input type="text" class="form-control" id="eventname" name="eventname" required>
    </div>
    <div class="form-group">
        <label for="location">location</label>
        <input type="text" class="form-control" id="location" name="location" >
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input class="form-control" id="date" name="date" required type="date">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
