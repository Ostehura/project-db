<head>
    {{>head}}
</head>
{{>header}}
<div class="container mt-3">
  <h1>Edit Client: {{client.idclient}}</h1>
  <form method="post" action="/clients/{{client.idclient}}">
    <div class="form-group">
      <label for="fullname">Name</label>
      <input type="text" class="form-control" id="fullname" name="fullname" value="{{client.fullname}}" required>
    </div>
    <div class="form-group">
      <label for="city">City</label>
      <input type="text" class="form-control" id="city" name="city" value="{{client.city}}">
    </div>
    <button type="submit" class="btn btn-primary">Update Courier</button>
  </form>
</div>